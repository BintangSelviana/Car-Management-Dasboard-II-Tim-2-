        crossorigin="anonymous"></script>
        <script>
          const submitBtn = document.getElementById("save");
    
          const uName = document.getElementById("username");
          const uPassword = document.getElementById("password");
          const uEmail = document.getElementById("email");
    
          // run this function whenever the values of any of the above 4 inputs change.
          // this is to check if the input for all 4 is valid.  if so, enable submitBtn.
          // otherwise, disable it.
          const checkEnableButton = () => {
            submitBtn.disabled = !(uName.value && uPassword.value && uEmail.value);
          };
    
          uName.addEventListener("change", checkEnableButton);
          uPassword.addEventListener("change", checkEnableButton);
          uEmail.addEventListener("change", checkEnableButton);
        </script>
