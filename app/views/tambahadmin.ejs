        <form
          method="POST"
          
          action="/tambahadmin"
          class="was-validated w-50 px-5 my-auto m-5"
        >
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
              required
              type="text"
              class="form-control"
              name="username"
              id="username"
              placeholder="Input Username"
            />
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              required
              type="text"
              class="form-control"
              name="email"
              id="email"
              placeholder="Input Admin Email"
            />
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              required
              type="text"
              class="form-control"
              id="password"
              name="password"
              placeholder="xxx"
            />
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
          </div>
          <input type="hidden" name="level" value="admin">
          <div class="mb-3">
            <a
              type="button"
              class="btn btn-outline-danger"
              onclick="history.back()"
              ><i class="bi bi-backspace-fill p-1"></i>Cancel</a
            >

            <button
              type="button"
              class="btn btn-primary"
              data-bs-toggle="modal"
              data-bs-target="#myModal"
              id="save"
              disabled
            >
              <i class="bi bi-upload p-1"></i> Create
            </button>
            <div
              class="modal"
              id="myModal"
              data-bs-backdrop="static"
              data-bs-keyboard="false"
            >
